<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|left"
    android:orientation="vertical">
    
    <TextView
        android:id="@+id/account_settings_activity_spinner_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-4dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="@dimen/action_bar_title_text_size"
        android:text="@string/app_name" />
    
	<TextView
	    android:id="@+id/account_settings_activity_spinner_subtitle"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="@dimen/action_bar_subtitle_top_margin"
	    android:layout_marginBottom="@dimen/action_bar_subtitle_bottom_margin"
	    android:singleLine="true"
	    android:ellipsize="end"
	    android:textColor="?android:attr/textColorSecondary"
	    android:textSize="@dimen/action_bar_subtitle_text_size" />

</LinearLayout>