<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_announcement_fragment_list_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">
    
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        
	    <TextView
	        xmlns:android="http://schemas.android.com/apk/res/android"
	        android:id="@+id/new_announcements_fragment_list_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:width="0dp"
	        android:textSize="18sp"
	        android:textColor="?android:attr/textColorPrimary"
	        android:maxLines="2"
	        />
	    
	    <TextView
	        xmlns:android="http://schemas.android.com/apk/res/android"
	        android:id="@+id/new_announcements_fragment_list_created_date"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_weight="0"
	        android:layout_marginTop="2dp"
	        android:width="60dp"
	        android:gravity="right"
	        android:textSize="12sp"
	        android:maxLines="1"
	        />
	    
    </LinearLayout>
    
    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/new_announcements_fragment_list_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:maxLines="2"
        />
    
</LinearLayout>